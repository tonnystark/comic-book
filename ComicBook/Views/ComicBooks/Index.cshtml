@model ComicBook.Models.ComicBooks[]
@{
    ViewBag.Title = "Comic Book";   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <h4>@Html.ActionLink(@item.DisplayText, "Detail", new { id = @item.ID })</h4>
            <a href="@Url.Action("Detail", "ComicBooks", new {id = item.ID})">
                <img src="/Images/@item.CoverImageFileName"
                     alt="@item.DisplayText"
                     class="img-responsive" />
            </a>
        </div>
    }

</div>
